<div class="container-fluid">
    <div class="container justify-content-center">
        <div class="modal-dialog modal-xl bg-info">
            <div class="modal-content bg-info">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">{{title}}</h5>
                    <a href="/products"><button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fa fa-arrow-left"></i></span></a>
                    </button>
                </div>
                <div class="modal-body px-5">

                    <form action="{{action}}" method="post">
                        <input type="hidden" name="_id" value="{{product._id}}">
                        <label for="">Product Name</label>
                        <input class="form-control mb-2" type="text" name="product_name"
                            value="{{product.product_name}}">
                        <label for="">Brand</label>
                        <input class="form-control mb-2" type="text" name="brand" value="{{product.brand}}">
                        <label for="">Quantity</label>
                        <input class="form-control mb-2" type="text" name="qty" value="{{product.qty}}">
                        <button type="submit"
                            class="btn {{buttonColor}} px-5 mt-3 mb-2 float-right">{{buttonTitle}}</button>
                    </form>

                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
</div>